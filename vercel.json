{
  "version": 2,
  "name": "sabza-validation-system",
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "CONTRACT_ADDRESS": "@contract_address",
    "QUICKNODE_URL": "@quicknode_url", 
    "PRIVATE_KEY": "@private_key"
  },
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  }
} 